{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "dist/**/*.*",
      "src/global/**/*.*",
      "src/**/*.d.ts"
    ]
  },
  "rules": {
    "no-console": [
      false
    ],
    "only-arrow-functions": [
      false
    ],
    "object-literal-sort-keys": [false],
    "array-type": [false],
    "triple-equals": [false],
    "no-var-requires": [false],
    "max-classes-per-file": false,
    "no-namespace": [
      false
    ],
    //"no-unsafe-any": [true],
    "no-arg": [true]
  }
}