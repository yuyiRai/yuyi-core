{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": false,
    "jsx": "preserve",
    "noEmit": true,
    "outDir": "lib",
    "importHelpers": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [
    "node_modules/@types/react",
    "node_modules",
    ".nuxt",
    "dist"
  ]
}