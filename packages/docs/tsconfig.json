{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@": ["./src"]
    },
    "outDir": "./lib",
    "declarationDir": "./types",
    "tsBuildInfoFile": "../.tsBuildInfo/docs.json",
    "incremental": true,
    "plugins": [{
      "transform": "typescript-transform-paths"
    }, {
      "transform": "ts-optchain/transform",
      "after": false
    }],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": false,
    "module": "esnext"
  },
  "include": ["src", "node_modules/@types"],
  "exclude": ["node_modules", "devlib", "build", "dist", "scripts", "acceptance-tests", "webpack", "jest", "example"]
}