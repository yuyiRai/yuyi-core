{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "outDir": "./",
    "importHelpers": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declarationDir": "./",
    "declarationMap": false,
    "removeComments": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {}
  },
  "include": ["./src/env.ts", "./src/tslib-extra.ts"]
}
