{
  "extends": "../../../tsconfig.json",
  "references": [
    {
      "path": "../../env"
    }
  ],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@": [
        "./"
      ]
    },
    "resolveJsonModule": true,
    "outDir": ".",
    "target": "es5",
    "noEmitHelpers": false,
    "noUnusedLocals": false,
    "importHelpers": true,
    "module": "esnext",
    "strict": true,
    "typeRoots": [
      "../../env/types",
      "node_modules/@types",
      "../../../node_modules/@types"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "tools",
    "lib",
    "../../../node_modules",
    "node_modules"
  ]
}
