{
  "extends": "../../tsconfig.json",
  "references": [
    {
      "path": "../env"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@": [
        "./"
      ]
    },
    "outDir": "./lib",
    "declarationDir": "./types",
    "tsBuildInfoFile": "../.tsBuildInfo/utils.json",
    "incremental": true,
    "module": "esnext",
    "types": [
      "../env/types/global"
    ],
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "tools",
    "../../node_modules"
  ]
}