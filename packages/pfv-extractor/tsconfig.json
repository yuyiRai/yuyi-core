{
  "extends": "../../tsconfig.json",
  "references": [{
    "path": "../yuyi-core-env"
  }],
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@": ["./"]
    },
    "outDir": "./lib",
    "declarationDir": "./types",
    "tsBuildInfoFile": "../.tsBuildInfo/pfv-extractor.json",
    "incremental": true,
    "allowUnusedLabels": true,
    "noUnusedLocals": false,
    "typeRoots": ["node_modules/@types", "../../node_modules/@types", "yuyi-core-env/src/global/index.ts"]
  },
  "include": ["src"],
  "exclude": ["tools", "../../node_modules"]
}